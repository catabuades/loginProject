  .wrap
    .container.login-module
      .modal-dialog
        .modal-content
          .modal-header
            h1.text-center Sign in
          .modal-body
            form(accept-charset='UTF-8', role='form', action='/sign-in', method='POST')
              .form-group
                input.form-control.input-lg(name='email' type='text', placeholder='E-mail')
              .form-group
                input.form-control.input-lg(name='password' type='password', placeholder='Password')
              .form-group
                input.signButton.btn.btn-block.btn-lg.btn-primary(type='submit', value='Sign in')
                span.pull-right
                  a(href='/login') Login
